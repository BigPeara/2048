
.mask {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color:rgba(77,79,86,0.8);
  position: fixed;
  top: 0;
  left: 0;
} 
.logo{
 width: 50%;  
 margin-top: 160rpx;   
}
.ready{
  width: 49%;
  padding: 10rpx 15rpx;
  margin: 0 auto;
  background-color:rgba(36,33,30,0.5);
  border-radius: 30px;
  margin-top: 20px;
  font-size: 16px;
  color: #efddc9;
  text-shadow: 5px 5px 5px #232120;
  text-align: center;
}
.start{
  width: 47%;
  height: 56px;
  line-height: 56px;
  background-color: #fff;
  border-radius:30px;
  text-align:  center;
  display: flex;
  display: -webkit-flex;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-align-items: center;
  margin-top: 100px;
}
.btn-start{
 color: #333;
 font-size: 20px;
}
.startImg{
  width: 20px;
  height: 20px;
  margin-left: 8px;
 display: block;
}
.btn-row{
  display: flex;
  display: -webkit-flex;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin-top: 50px;
}
.rowImg{
  width: 16px;
  height: 12px;
  margin-right: 8px;
}
.btn-look{
  color: #fff;
  font-size: 15px;
  text-decoration: underline;
}